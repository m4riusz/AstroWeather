<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moonFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="7"
        android:background="@drawable/moon_background"
        android:layout_below="@+id/moonTitle"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MOON"
            android:id="@+id/textView4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eastMoonText"
            android:id="@+id/eastLabel"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="1"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:id="@+id/eastValue"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="2"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/westMoonText"
            android:id="@+id/westLabel"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="1"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:id="@+id/westValue"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="2"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newMoonText"
            android:id="@+id/newMoonLabel"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="1"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:id="@+id/newMoonValue"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="2"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fullMoonText"
            android:id="@+id/fullMoonLabel"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="1"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:id="@+id/fullMoonValue"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="2"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moonStageText"
            android:id="@+id/moonStageLabel"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="1"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:id="@+id/moonStageValue"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="2"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/probeDayText"
            android:id="@+id/probeDayLabel"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="1"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:id="@+id/probeDayValue"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:textSize="10sp"
            android:singleLine="false"
            android:textIsSelectable="false"
            android:layout_columnWeight="2"
            android:shadowColor="#ffffff"
            android:textColor="#fc0000"
            android:elegantTextHeight="false" />

    </GridLayout>

</LinearLayout>